<div class="container">
  <h1><%= @cocktail.name %></h1>
  <% if @cocktail.photos.attached? %>
    <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>

  <% end %>
  <h2>List of ingredients</h2>
  <% @cocktail.doses.each do |dose| %>
    <ul>
      <li><%= dose.ingredient.name %> <%= dose.description %> <%= link_to "Delete the dose", dose_path(dose),
            method: :delete,
            data: { confirm: "Are you sure?" }%></li>
    </ul>
    <% end %>
  <h2>Add ingredients to your cocktail</h2>
 <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description %>
    <%= f.association :ingredient %>
    <%= f.submit %>
  <% end %>
</div>
